<%- include('../layout/head') %>
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            background: #1e2b35;
        }
    </style>
    <div class="h-100 w-100">
        <div class="d-flex h-100 align-items-center justify-content-center">
            <div class="d-flex justify-content-center ps-3 pe-3 "  style="    width: 29rem;">
                <div class="card p-4 card-body border-0  bg-dark text-white w-100">
                    <div class="mt-3 w-100 text-center">
                        <div class="text-white fs-21 fw-500">Chào mừng trở lại!</div>
                        <div class="text-gray fs-d13 mt-2">Rất vui mừng khi chúng tôi gặp lại bạn!</div>
                    </div>
                    <div class="mt-3">
                        <form method="POST" action="/api/login" data-ajax>
                            <div class="mb-3">
                                <label for="account" class="form-label fs-13 text-gray fw-500">EMAIL
                                    HOẶC SỐ
                                    ĐIỆN THOẠI<sub class="text-danger ms-1">*</sub></label>
                                <input type="text" name="account" class="input form-control outline-0 border-0 fs-d13"
                                    id="account" aria-describedby="account">
                            </div>
                            <div class="mb-1">
                                <label for="password" class="form-label fs-13 text-gray fw-500">MẬT
                                    KHẨU<sub class="text-danger ms-1">*</sub></label>
                                <input type="password" name="password"
                                    class="input form-control outline-0 border-0 fs-d13" id="password">
                            </div>

                            <button type="submit"
                                class="btn btn-auth mt-3 fw-seibold w-100 text-center fw-semibold text-main2 fs-13 border-0">Đăng
                                Nhập</button>
                            <div class="mt-3 d-flex align-items-center">
                                <span class="fs-13 text-gray">Bạn chưa có tài khoản?</span>
                                <a href="register" class="fs-13 text-main fw-500 text-decoration-none ms-1">Tạo tài
                                    khoản mới</a>
                            </div>
                        </form>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/script') %>
        <script>

        </script>
        <%- include('../layout/end') %>