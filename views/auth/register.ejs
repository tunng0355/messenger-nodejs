<%- include('../layout/head') %>
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            background: #1e2b35;
        }

    </style>
    <div class="h-100 w-100">
        <div class="d-flex h-100 align-items-center justify-content-center">
            <div class="d-flex justify-content-center ps-3 pe-3 " style="    width: 29rem;">
                <div class="card p-4 card-body border-0 bg-dark text-white w-100">
                    <div class="mt-3 w-100 text-center">
                        <div class="text-white fs-21 fw-500">Tạo tài khoản</div>
                    </div>
                    <div class="mt-4">
                        <form method="POST" action="/api/register" data-ajax>
                            <div class="mb-3">
                                <label for="fullname" class="form-label fs-13 text-gray fw-500">Họ và tên</label>
                                <input type="text" name="fullname"
                                    class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                    id="fullname" name="fullname" aria-describedby="fullname">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label fs-13 text-gray fw-500">EMAIL</label>
                                <input type="email" name="email"
                                    class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                    id="email" name="email" aria-describedby="email">
                            </div>
                            <div class="mb-3">
                                <label for="username" class="form-label fs-13 text-gray fw-500">TÊN ĐĂNG
                                    NHẬP</label>
                                <input type="text"
                                    class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                    id="username" name="username" aria-describedby="username">
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label fs-13 text-gray fw-500">MẬT
                                    KHẨU</label>
                                <input type="password"
                                    class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                    id="password" name="password">
                            </div>
                            <div class="mb-3">
                                <label for="DateBirth" class="form-label fs-13 text-gray fw-500">NGÀY SINH</label>
                                <div class="row row-cols-3 row-cols-lg-3 g-2 g-lg-3">
                                    <div class="col">
                                        <input type="number"
                                        class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                        id="DateBirth" name="DateBirth">
                                    </div>
                                    <div class="col">
                                        <input type="number"
                                        class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                        id="MonthBirth" name="MonthBirth">
                                    </div>
                                    <div class="col">
                                        <input type="number"
                                        class="input form-control outline-0 box-shadow-none bg-dark text-gray border-0 fs-15"
                                        id="YearBirth" name="YearBirth">
                                    </div>
                                </div>
                            </div>

                            <button type="submit"
                                class="btn btn-auth w-100 text-main2 fw-semibold text-center fw-500 fs-13 border-0">Tiếp
                                tục</button>
                            <div class="mt-3 d-flex align-items-center">
                                <span class="fs-13 text-gray">Đã có tài khoản?</span>
                                <a href="login" class="fs-13 text-main fw-500 text-decoration-none ms-1">Đăng
                                    nhập</a>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/script') %>
        <script>

        </script>
        <%- include('../layout/end') %>